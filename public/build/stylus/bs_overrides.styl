.form-control
	box-shadow none
	border 1px solid rgba(222, 211, 211, 0.21)
	&:hover,
	&:focus
		border-color #ccc
	&:focus
		box-shadow none
a,
.fake-link
	cursor pointer
	font-size 120%
.btn
	border-radius 0
	font-size 1.5em
	&[class*="btn-"]
		color #fff
.carousel-control
	background none !important
	text-shadow none !important
ol,
ul
	padding 0
select
	appearance none
.table
	> tbody > tr
		> td,
	 	> th,
	> tfoot > tr
		> td,
		> th,
	> thead > tr
		> td,
		> th
			vertical-align center
			text-align center