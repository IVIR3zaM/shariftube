body
	font-family yekan, sans-serif
	font-size 100%
	direction rtl
	text-align right
	unicode-bidi bidi-override
	background $kk_light_gray none repeat scroll 0 0
.top-logo
	font-size 2em
	margin-bottom 20px
	> img
		max-width 50%
.center-item
	padding 1.5em
	max-width 500px
	margin 0 auto
	@media only screen and (max-width: (500 / 16em))
		width 100%
		padding-right 0
		padding-left 0
.bg-white
	background-color #FFFFFF
.form-condensed
	padding-right 5em
	padding-left 5em
	@media only screen and (max-width: (500 / 16em))
		padding-left 1em
		padding-right 1em
form
	margin-bottom 0
	.btn
		margin-bottom 0
	padding 1.25em 2.5em
	@media only screen and (max-width: (500 / 16em))
		padding-right 1em
		padding-left 1em
	.form-head
		font-size 3em
		color $kk_gray
		margin-bottom 1.5em
	.form-group
		position relative
		margin-bottom 1.5em
		&.form-group-st
			label
				position absolute
				right 0
				top 0
				background-color $red
				color #fff
				margin 0
				line-height 2
				padding-left 1em
				padding-right 1em
				height 100%
				max-height 100%
				padding-right 1.5em
				padding-left 1.5em
		&.form-group-round
			label,
			input,
			textarea
				border-radius 20px
		&.form-group-multi
			@extend .clearfix
			> .multi-larger
				width 55%
				&.float-right
					margin-left 5%
				&.float-left
					margin-right 5%
			> .multi-smaller
				width 40%