body
	font-family yekan, sans-serif
	font-size 120%
	direction rtl
	text-align right
	unicode-bidi bidi-override
	background-color $kk_light_gray
.flex
	display flex
	flex-direction row-reverse
	flex-wrap wrap
	&.flex-reverse
		flex-direction row
.text-en
	font-family "Helvetica Neue",Helvetica,Arial,sans-serif
.text-ltr
	direction ltr
.top-logo
	font-size 2em
	margin-bottom 20px
	> img
		max-width 50%
.center-item
	padding 1.5em
	max-width 500px
	margin 0 auto
	@media only screen and (max-width: (500 / 16em))
		width 100%
		padding-right 0
		padding-left 0
.bg-white
	background-color #fff
// Images
.img-block
	max-width 100%
	max-height 100%
	display block
.img-rounded
	border-radius 50%
// Badges
.badge
	display inline-block
	padding .35em .75em
	color $kk_light_gray
	&.badge-red,
	&.badge-danger
		background-color $red
		color #fff
	&.badge-rounded
			border-radius 50%
	&.badge-support
		padding-right .55em
		padding-left .55em
// Top Navbar
.main-container
	min-height calc(100vh - 250px)
.dashboard-state
	padding-top 8em
	@media (max-width: 670px)
		padding-top 2em
.navbar-top
	background-color #fff
	padding .5em 2em
	margin-bottom 0
	@extend .flex
	> *
		height 80px
		max-height 80px
		@media (max-width: 560px)
			max-height 500px
			height auto
	.logo-top-navbar
		height 65px
		height calc(80px - 1em)
	.user-area-avatar,
	.user-area-name,
	.user-quota-progress,
	.user-quota-buy
		margin-right 10px
		margin-left 10px
		float right
		@media (max-width: 860px)
			margin-left 0
		@media (max-width: 560px)
			width 50%
			margin-right 0 !important
	.user-area-inner,
	.user-quota-inner
		float right
	@media (max-width: 768px)
		.user-area-inner
			float right
		.user-quota-inner
			float left
	@media (max-width: 560px)
		.user-area-inner,
		.user-quota-inner
			float none
			margin-bottom 20px
	.user-quota
		.user-quota-buy
			margin-top 2em
			@media (max-width: 560px)
				text-align left
				margin-top 0
				> a
					font-size 1em
					position relative
					top 5px
		.user-quota-progress
			margin-top 1.5em
			height 40px
			line-height 40px
			text-align center
			font-size 1.25em
			padding 0
			position relative
			@media (max-width: 560px)
				margin 0 auto
			.bar
				border 1px solid $kk_light_gray
				position absolute
				top 0
				right 0
				height 100%
				background-color #fff;
				transition all .5s ease-out
				border-top-right-radius .5em
				border-bottom-right-radius .5em
			#info
				position absolute
				top 0
				left 50%
				transform translate3d(-50%,0,0)
				color #272727
				width 100%
			.quota-progress-bar
				position relative
				width 210px
				height 40px
				@media (max-width: 860px)
					width 160px
				@media (max-width: 560px)
					width 140px
				.info
					width 100%
					height 40px
					border-radius .5em
	.user-area
		.user-area-name
			margin-top 1.75em
			font-size 1.5em
		.user-area-avatar
			position relative
			margin-top 1em
			@media (max-width: 860px)
				margin-right 0
			@media (max-width: 560px)
				text-align center
			.user-area-logout
				position absolute
				top 0
				right -10px
				padding 5px 7px
				@media (max-width: 560px)
					right 50%
					transform translate3d(40px,0,0)
.logo
	text-align left
	@media (max-width: 768px)
		text-align center
		img
			display inline
	@media (max-width: 560px)
		margin-bottom 20px
.top-links
	border-bottom 1px solid #fff
	background-color rgba(255,255,255,0.5)
	@media (max-width: 1120px)
		> div
			padding 0
	.list-top-links
		max-width 1020px
		display block
		margin 0 auto
		padding-right 0
		padding-left 0
		padding-top 2em
		padding-bottom 2em
		text-align center
		> li
			width 14%
			width calc(100% / 7)
			text-align center
			float right
			@media (max-width: 1120px)
				float none
				display inline-block
				width auto
				margin-right 5px
				margin-left 5px
			@media (max-width: 560px)
				margin-bottom 10px
			> a,
			.fake-link
				text-decoration none
				color $kk_gray
				&:hover,
				&:focus,
				&.active
					color $kk_blue
					outline 0 none
		&.is-referral
			> li
				width 12.5%
				width calc(100% / 8)
				@media (max-width: 1120px)
					float none
					display inline-block
					width auto
					margin-right 5px
					margin-left 5px
				@media (max-width: 560px)
					margin-bottom 10px
				.dropdown-menu
					box-shadow none
					left -50%
					> li
						cursor pointer
						padding 0 .5em
						text-align right
.main-section > *
	padding-right 20em
	padding-left 20em
	@media (max-width: 1200px)
		padding-right 12em
		padding-left 12em
	@media (max-width: 1200px)
		padding-right 6em
		padding-left 6em
	@media (max-width: 992px)
		padding-left 15px
		padding-right 15px
.search-bar
	.form-control
		border-radius 0
		font-weight 700
	.input-group-btn
		font-size inherit
		.btn-search
			background-color $red
			padding-top 8.75px
			padding-bottom 8.75px
			min-width 125px
			height 46px
			@media (max-width: 500px)
				min-width auto
.input-lg
	@media (max-width: 500px)
		font-size 15px
	
.select-item
	@media (max-width: 992px)
		float none
		width auto
		display inline-block
		margin 0 5px
		padding-right 0
		padding-left 0
	@media (max-width: 670px)
		width 310px
		width calc(50% - 20px)
		margin 0 10px 10px 0
		float right
.searchbar-item
	@media (max-width: 992px)
		padding-right 5px
		padding-left 0
.searchbar-select
	appearance none
	position relative
	transition background-color 0.3s ease-out
	cursor pointer
	&:hover
		background-color $kk_light_gray
.list-records
	padding 0
	@extend .flex
	> li
		padding-bottom 1em
		margin-bottom 10px
		@media (max-width: 992px)
			width 100%
		@media (max-width: 500px)
			padding-right 0
			padding-left 0
		.record
			@extend .flex
			background-color #fff
			padding 1em
			height 100%
			min-height 200px
			@media (max-width: 992px)
				flex-direction column-reverse
				height auto
				min-height 10px
			.record-details
				padding 0 0.5em
				width 66.666666667%
				width calc((100%/12)*8)
				@media (max-width: 992px)
					width 100%
					padding-right 1em
					padding-left 1em
				.record-title
					font-size 1.5em
				.record-title,
				.record-desc
					margin .5em auto
				.record-link
					font-size 1em
					position absolute
					bottom 2em
					left 2em
			.record-thumb
				padding 0 0.5em
				width 33.333333333%
				width calc((100%/12)*4)
				@media (max-width: 992px)
					width 100%
				img
					margin-top .5em
					width 145px
					max-width 100%
					height auto
					max-height 145px
					display block
					float right
					border 1px solid $kk_light_gray
					padding .5em
					@media (max-width: 992px)
						float none
						margin-right auto
						margin-left auto
						margin-bottom .5em
.footer
	@media (max-width: 800px)
		position relative
	.navbar-footer
		@extend .flex
		margin-bottom 0
		align-items center
		border-top 1px solid #fff
		background-color rgba(255,255,255,0.3)
		.copyright
			@media (max-width: 768px)
				margin-top 20px
		.navbar-footer-support
			ul
				@extend .flex
				margin 0
				padding 0
				font-size 1.5em
				@media (max-width: 768px)
					display block
					padding-top 20px
				> li
					.support-item
						border-radius 50%
						background-color $kk_black
						color #fff
						width 40px
						height 40px
						display table-cell
						vertical-align middle
						text-align center
		.carousel-control
			color $kk_black
		.carousel-inner
			padding-right 0
			margin 0
			.item
				text-align center
.list-ticket
	margin-top 2em
	> li
		width 100%
		display block
		padding 1em
		font-size 1.25em
		> div
			background-color #fff
			height 100%
			padding 1em
// 404
.error-page
	@extend .flex
	justify-content center
	align-items center
	height 100vh
// policy
#policy-content
	position relative
	background-color lighten($kk_light_gray, 30%)
	color $$kk_black
	padding 1.5em
	display none
	margin 1em auto
	.close
		color $kk_black
		position absolute
		top .25em
		left .25em
		font-size 1em
	@media (max-width: 700px)
		position fixed
		top 0
		left 0
		width 100%
		height 100%
		z-index 2
		@extend .flex
		justify-content center
		align-items center
		.close
			font-size 2em
#policy-trigger
	position absolute
	top -.5em
	right -2em
	> button
		border-radius 50%
		background-color rgba(0,0,0,0.5)
		color #fff
		border none
		padding 0.25em 0.75em
// Shopping List
.list-shop
	li
		@media (max-width: 768px)
			margin-bottom .5em
// #file-progress easing
#file-progress
	transition all .3s ease-out
	position relative
	background-color darken($kk_light_gray, 5%)
	border 1px solid $kk_gray
	padding .2em
	.bar
		transition width 0.3s ease-out
		height 30px
		background-color $kk_blue
	.info
		color #fff
		position absolute
		top 50%
		left 50%
		transform translate3d(-50%,-50%,0)
		font-size 1.25em
		width 100%
		text-align center
		@media (max-width: 500px)
			font-size 1em
		> a
			display block
			position absolute
			top -2px
			left -75px
			padding 0 .5em
			text-decoration none
			color $red